{
  "info": {
    "_postman_id": "d1b9afba-4df2-4d15-92ed-a20ac59c5e12",
    "name": "Gestão de Eventos - AdonisJS 6 (IDs fixos em 1)",
    "description": "Collection completa com todos os :id e :eventId fixos no valor 1\nPerfeita pra testar rápido sem ficar trocando ID toda hora",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3333",
      "type": "string"
    },
    {
      "key": "TOKEN",
      "value": "",
      "description": "Token é salvo automaticamente após o login"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "RF01 - Login (Organizador ou Participante)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const json = pm.response.json();",
                  "    pm.collectionVariables.set('TOKEN', json.token);",
                  "    console.log('Token salvo:', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"davidson@email.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth",
              "host": ["{{base_url}}"],
              "path": ["auth"]
            }
          }
        }
      ]
    },

    {
      "name": "Users",
      "item": [
        {
          "name": "RF02/RF06 - Criar Participante ou Organizador",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\":\"Davidson Pacifico\",\n    \"email\": \"davidson@email.com\",\n    \"cpf\":\"12312312300\",\n    \"password\": \"123456\",\n    \"role\":\"organizador\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/create",
              "host": ["{{base_url}}"],
              "path": ["users", "create"]
            }
          }
        },

        {
          "name": "RF03 - Atualizar Perfil (Usuário ID 1)",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{TOKEN}}", "type": "string" }] },
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Davidson Pacifico Walter\",\n    \"email\": \"davidson@email.com\",\n    \"cpf\": \"12312312300\",\n    \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/1",
              "host": ["{{base_url}}"],
              "path": ["users", "1"]
            }
          }
        },

        {
          "name": "RF03 - Meu Usuário (GET /me)",
